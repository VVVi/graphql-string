{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,    

    "declaration": true,
    "outDir": "./lib"   
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "tests"]
}